{{#if successMas}}
<div class="alert alert-success">
	{{ successMas }}
</div>
{{/if}}
{{#if errorMas}}
<div class="alert alert-danger">
	{{ errorMas }}
</div>
{{/if}}
<div class="row">
	<div class="col-md-12">
		<div class="box box-black">
			<div class="box-title">
				<h3><i class="fa fa-table"></i>Roles</h3>
				<div class="box-tool">
					<a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
					<a data-action="close" href="#"><i class="fa fa-times"></i></a>
				</div>
			</div>
			<div class="box-content">

				<div class="btn-toolbar pull-right">
					<div class="btn-group">
						<a class="btn btn-circle show-tooltip" title="" href="/roles/new"
							data-original-title="Add new record"><i class="fa fa-plus"></i></a>

					</div>
				</div>
				<br><br>
				<div class="table-responsive">
					<table id="example" class="table table-striped dt-responsive" cellspacing="0" width="100%">
						<thead>
							<tr>
								<th style="width:18px"><input type="checkbox" onclick="select_all()"></th>
								<th>Role</th>
								<th class="visible-md visible-lg" style="width:130px">Action</th>
							</tr>
						</thead>
						{{#each items }}
						<tbody>
							<td> </td>
							<td>{{this.role}}</td>
							<td>
								<div class="btn-group">
									<a class="btn btn-sm show-tooltip" title="" href="/roles/{{this._id}}/edit"
										data-original-title="Edit"><i class="fa fa-edit"></i></a>
									<a class="btn btn-sm btn-danger show-tooltip" title=""
										onclick="return confirm('Are you sure you want to delete this ?');"
										href="/roles/{{this._id}}/delete" data-original-title="Delete"><i
											class="fa fa-trash-o"></i></a>
								</div>
							</td>
						</tbody>
						{{/each}}
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$('#role').addClass('active');
		$('#role-index').addClass('active')
</script>