{{#if successMas}}
<div class="alert alert-success">
    {{ successMas }}
</div>
{{/if}}
{{#if errorMas}}
<div class="alert alert-danger">
    {{ errorMas }}
</div>
{{/if}}
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-black">
                    <div class="box-title">
                        <h3><i class="fa fa-table"></i> Category Table</h3>
                        <div class="box-tool">
                            <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                            <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="btn-toolbar pull-right">
                            <div class="btn-group">
                                <a class="btn btn-circle show-tooltip" title="" href=""
                                    data-original-title="Add new record"><i class="fa fa-plus"></i></a>
                            </div>
                        </div>
                        <br><br>
                        <div class="table-responsive">
                            <table id="example" class="table table-striped dt-responsive" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th style="width:18px"><input type="checkbox"
                                                onclick="select_all('categories')"></th>
                                        <th>id</th>
                                        <th>Title</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td><input class="select_all_template" type="checkbox" name="selected_rows[]"
                                                value="" class="roles" onclick="collect_selected(this)">
                                        </td>
                                        <td></td>
                                        <td>
                                        </td>
                                        <td>
                                            <img class=" img-circle" width="100px" height="100px" src="" />
                                        </td>
                                        <td class="visible-md visible-lg">
                                            <div class="btn-group">
                                                <a class="btn btn-sm btn-success show-tooltip" title="Add Content"
                                                    href="" data-original-title="Add Content"><i
                                                        class="fa fa-plus"></i></a>
                                                <a class="btn btn-sm show-tooltip" title="Show Content" href=""
                                                    data-original-title="show Content"><i
                                                        class="fa fa-step-forward"></i></a>
                                                <a class="btn btn-sm show-tooltip" href="" title="Edit"><i
                                                        class="fa fa-edit"></i></a>
                                                <a class="btn btn-sm show-tooltip btn-danger"
                                                    onclick="return ConfirmDelete();" href="" title="Delete"><i
                                                        class="fa fa-trash"></i></a>
                                                <a class="btn btn-sm btn-warning show-tooltip" title="Add Sub Category"
                                                    href="" data-original-title="Add Sub Category"><i
                                                        class="fa fa-plus"></i></a>
                                                <a class="btn btn-sm  btn-primary show-tooltip"
                                                    title="Show Sub Category" href=""
                                                    data-original-title="Show Sub Category"><i
                                                        class="fa fa-step-forward"></i></a>
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script>


    $('#category').addClass('active');
    $('#category_index').addClass('active');

</script>